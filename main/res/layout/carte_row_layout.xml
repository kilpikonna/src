<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/column1Layout"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/listText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ff00ff"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_commander"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Ajouter a la commande"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/column2Layout"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/listPrice"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ff00ff"
                android:gravity="right"
                android:layout_weight="1"
                android:paddingHorizontal="3dp"/>

            <Button
                android:id="@+id/button_detailes"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Voir les dÃ©tailes"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/column3Layout"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>